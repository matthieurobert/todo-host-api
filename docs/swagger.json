{
    "swagger": "2.0",
    "info": {
        "description": "This is a sample self hosted todo list api.",
        "title": "Todo-host API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "API Support",
            "url": "http://www.swagger.io/support",
            "email": "support@swagger.io"
        },
        "license": {
